<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/AppNameConstraint"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#222222">

        <TextView
            android:id="@+id/appName"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="LifeCycle"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.183"
            app:layout_constraintLeft_toLeftOf="@id/AppNameConstraint"
            app:layout_constraintRight_toRightOf="@id/AppNameConstraint"
            app:layout_constraintTop_toTopOf="@id/AppNameConstraint"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resultConstraint"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        app:layout_constraintTop_toBottomOf="@id/AppNameConstraint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/resultNum"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="90sp"
            app:layout_constraintBottom_toBottomOf="@id/resultConstraint"
            app:layout_constraintHorizontal_bias="0.985"
            app:layout_constraintLeft_toLeftOf="@id/resultConstraint"
            app:layout_constraintRight_toRightOf="@id/resultConstraint"
            app:layout_constraintTop_toTopOf="@id/resultConstraint"
            app:layout_constraintVertical_bias="0.427" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keyboardConstraint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/resultConstraint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btnCE"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:textColor="@color/black"
            android:text="CE"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/keyboardConstraint" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:textColor="@color/black"
            android:text="C"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btnCE"
            app:layout_constraintTop_toTopOf="@id/btnCE"/>

        <Button
            android:id="@+id/btnBS"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:textColor="@color/black"
            android:text="BS"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btnC"
            app:layout_constraintTop_toTopOf="@id/btnC"/>

        <Button
            android:id="@+id/btnDivision"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:textColor="@color/black"
            android:text="/"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btnBS"
            app:layout_constraintTop_toTopOf="@id/btnBS"/>

        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:text="7"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/btnCE"
            app:layout_constraintTop_toBottomOf="@id/btnCE"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:text="8"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btn7"
            app:layout_constraintTop_toTopOf="@id/btn7"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:text="9"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btn8"
            app:layout_constraintTop_toTopOf="@id/btn8"/>

        <Button
            android:id="@+id/btnMultiplication"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:textColor="@color/black"
            android:text="x"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/btn9"
            app:layout_constraintTop_toTopOf="@id/btn9"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:text="4"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/btn7"
            app:layout_constraintTop_toBottomOf="@id/btn7"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:text="5"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btn4"
            app:layout_constraintTop_toTopOf="@id/btn4"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:text="6"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btn5"
            app:layout_constraintTop_toTopOf="@id/btn5"/>

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:textColor="@color/black"
            android:text="-"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btn6"
            app:layout_constraintTop_toTopOf="@id/btn6"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:text="1"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/btn4"
            app:layout_constraintTop_toBottomOf="@id/btn4"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:text="2"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btn1"
            app:layout_constraintTop_toTopOf="@id/btn1"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:text="3"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btn2"
            app:layout_constraintTop_toTopOf="@id/btn2"/>

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:textColor="@color/black"
            android:text="+"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btn3"
            app:layout_constraintTop_toTopOf="@id/btn3"/>

        <Button
            android:id="@+id/btnPosOrNeg"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:textColor="@color/black"
            android:text="+/-"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/btn1"
            app:layout_constraintTop_toBottomOf="@id/btn1"/>

        <Button
            android:id="@+id/btn0"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:text="0"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btnPosOrNeg"
            app:layout_constraintTop_toTopOf="@id/btnPosOrNeg"/>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:textColor="@color/black"
            android:text="."
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btn0"
            app:layout_constraintTop_toTopOf="@id/btn0"/>

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:backgroundTint="#dedede"
            android:textColor="@color/black"
            android:text="="
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btnDot"
            app:layout_constraintTop_toTopOf="@id/btnDot"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
